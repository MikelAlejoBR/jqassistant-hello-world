<jqa:jqassistant-rules xmlns:jqa="http://www.buschmais.com/jqassistant/core/analysis/rules/schema/v1.0">

    <constraint id="my-rules:TestClassName">
        <requiresConcept refId="junit4:TestClass" />
        <description>All JUnit test classes must have a name with suffix "Test".</description>
        <cypher><![CDATA[
            MATCH
                (t:Junit4:Test:Class)
            WHERE NOT
                t.name =~ ".*Test"
            RETURN
                t AS InvalidTestClass
        ]]></cypher>
    </constraint>

    <constraint id="my-rules:InheritanceDepth">
        <description>Too much inheritance depth —3 or greater—.</description>
        <cypher><![CDATA[
            MATCH
                (c:Class)-[:EXTENDS*3]->(m:Class)
            RETURN
                c AS TooMuchInheritanceClass
        ]]></cypher>
    </constraint>

    <constraint id="my-rules:FinalClassImplementsInterface">
        <description>All implementations of an interface should have the final modifyier.</description>
        <cypher><![CDATA[
            MATCH
                (class:Java:Class)-[:IMPLEMENTS]->(:Java:Interface)
            WHERE
                class.final IS NULL
            RETURN
                class as ClassShouldBeFinal
        ]]></cypher>
    </constraint>

    <group id="default">
        <includeConstraint refId="my-rules:TestClassName" />
        <includeConstraint refId="my-rules:InheritanceDepth" />
        <includeConstraint refId="my-rules:FinalClassImplementsInterface" />
    </group>

</jqa:jqassistant-rules>
